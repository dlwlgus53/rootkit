struct list_head* prev;
struct list_head* next;
struct list_head* now;

void list_redo(void){
	
	now->prev = prev;
	now->next = next;
}
void save_info(void){
	now = &THIS_MODULE->list;
	prev = now->prev;
	next = now->next;
}
